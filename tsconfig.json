{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "ts-node": { "esm": true },
  "exclude": [
    "jest.config.js",
    "./node_modules",
    "./midudev/adventjs-2021",
    "./midudev/codember-2022",
    "./mouredev",
    "./utils"
  ]
}
